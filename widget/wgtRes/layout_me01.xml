<?xml version="1.0" encoding="utf-8"?>
<root layoutId = "me01">
    <linearlayout width="-1" height="${per}" padding="15 0 0 0"
                  background="#ffffff">
        <linearlayout width="-1" height="-1" orientation="horizontal" gravity="centerY"
                      weight = "1">
            <linearlayout weight = "1" width="-2" height="-2" orientation="horizontal"
                          gravity="bottom">
                <text id = "title" width = "-2" height = "-2" text="${title}"
                      textSize = "16" textColor = "#000000"/>
                <text id = "summary" width = "-2" height = "-2" text="${summary}" margin = "10 0"
                      textSize = "14" textColor = "#cccccc" visible = "${summary-visible}"
                      gravity="left"/>
            </linearlayout>
            <img width = "-2" height = "-2" src = "res://img/angle_right.png"
                 margin="20 0"/>
        </linearlayout>
        <text width = "-1" height = "1" background = "#EFEFEF"/>
    </linearlayout>
</root>