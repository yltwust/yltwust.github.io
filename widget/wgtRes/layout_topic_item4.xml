<?xml version="1.0" encoding="utf-8"?>
<root layoutId = "topic-item4">
  <linearlayout width="-1" height="-2" padding = "20 15" background = "#ffffff" orientation="vertical">
        <linearlayout id = "content" orientation = "horizontal" width = "-1"
                      height = "-2"  gravity = "centerY">
            <img id = "icon" width = "${per}" height = "${per}" src = "${icon}"/>
            <linearlayout width = "-2" height = "-2" weight = "1" margin = "20 0">
                <text id = "topicName" width = "-2" height = "-2" text="${topicName}" textSize = "16"
                      textColor = "#000000"/>
                <text id = "description" width = "-2" height = "-2" text="${description}" textSize = "14"
                      textColor = "#999999"/>
            </linearlayout>
            <img id = "status" width = "${per}" height = "${per1}" src = "res://img/attention/add.png"
                onClick = "onAddAttentionClick"/>
        </linearlayout>
        <text width = "-1" height = "1" background = "#EFEFEF" margin="0 20 0 0"/>
    </linearlayout>
</root>